# Line ending normalization
* text=auto

# PHP file-specific attributes
*.php  text diff=php

# JavaScript file-specific attributes
*.js   text

# CSS file-specific attributes
*.css  text

# HTML file-specific attributes
*.html text

# Images
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary

# Composer files
composer.json text eol=lf
composer.lock text eol=lf

# Configuration files
*.xml  text
*.yml  text
*.yaml text

# Export exclusions
/.env export-ignore
/tests export-ignore
/build export-ignore
/vendor export-ignore

# Ensure shell scripts use LF and are executable
*.sh text eol=lf
*.sh export-ignore
*.sh executable
02-configure-symfony.sh text eol=lf chmod=+x
mercure.run text eol=lf chmod=+x

# Ensure consistent line endings for core files
.gitignore text eol=lf
*.yml      text eol=lf
*.yaml     text eol=lf
*.json     text eol=lf
*.js       text eol=lf
*.xml      text eol=lf
*.php      text diff=php eol=lf
docker-compose.yml text eol=lf
config/bundles.php text eol=lf

